<!DOCTYPE html>
<html>
    <head>
        <%= render "layouts/rails_default"%>
        <%= render "layouts/shim" %>
        <%= render "layouts/header" %>
    </head>
    <body>
        <div class="container">
            <% flash.each do |message_type, message| %>
                <div class="alert alert-<%= message_type %>"><%= message %></div>
            <% end %>
            <%= yield %>
        </div>
        <%= render "layouts/footer" %>
    </body>
</html>

